[Unit]
Description=Buildbot Worker
Wants=network.target
After=network.target

[Service]
Type=forking
PIDFile={{ buildbot_master_basedir }}/twistd.pid
WorkingDirectory={{ buildbot_master_basedir }}
ExecStart=/usr/local/bin/buildbot start {{ buildbot_master_basedir }}
ExecReload=/usr/local/bin/buildbot reconfig {{ buildbot_master_basedir }}
ExecStop=/usr/local/bin/buildbot stop {{ buildbot_master_basedir }}
Restart=always
User={{ buildbot_master_user }}

[Install]
WantedBy=multi-user.target